<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".recyclerview.RecyclerViewMainActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center"
        android:textSize="25sp"
        android:text="关于Recyclerview的一些测试"/>

    <Button
        android:id="@+id/btn_recyclerView_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape"
        android:layout_marginBottom="10dp"
        android:textSize="20sp"
        android:textColor="#fff"
        android:text="Linear-列表视图-垂直"/>

    <Button
        android:id="@+id/btn_rv_gird_hor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape"
        android:layout_marginBottom="10dp"
        android:textSize="20sp"
        android:textColor="#fff"
        android:text="Grid-表格视图-水平"/>

    <Button
        android:id="@+id/btn_rv_pu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape"
        android:layout_marginBottom="10dp"
        android:textSize="20sp"
        android:textColor="#fff"
        android:text="Recyclerview-瀑布流"/>

</LinearLayout>